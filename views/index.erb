<form action="/stores/new" method="post">
  <label for="name">Assign a name to your Store:</label>
  <input id="name" name="name" type="text">

  <button type="submit" id="addList">Add Store</button>
</form>


<form action="/brands/new" method="post" class = "form-inline">
  <label for="name">Name of the brand:</label>
  <input id="name" name="name" type="text" class= "form-control">

  <button type="submit" class="btn btn-default">Add brand</button>
</form>
<h1>Stores</h1>
<% if @stores.any?() %>

    <ul>
      <% @stores.each() do |store| %>
        <li><a href="/stores/<%= store.id()%>"><%= store.name() %></a> </li>
      <% end %>
    </ul>
<% else %>
<p>There are no stores yet!</p>
<% end %>

<h2>Brands</h2>
<% if @brands.any?() %>

    <ul>
      <% @brands.each() do |brand| %>
        <li><a href="/brands/<%= brand.id()%>"><%= brand.name() %></a> </li>
      <% end %>
    </ul>
<% else %>
<p>There are no stores yet!</p>
<% end %>

<h2>Add brands to a store</h2>


<form action="/brands" method="post" class = "form-inline">
  <label for="store_id">Select a Store</label>
  <select id='store_id' name='store_id' type='text' class="form-control" style="width:100px">
    <% @stores.each() do |store| %>
      <option value="<%= store.id()%>"> <%= store.name() %> </option>
    <% end %>
  </select>

  <label for="name">Select a Brand:</label>
  <select id='brand_id' name='brand_id' type='text' class="form-control" style="width:100px">
    <% @brands.each() do |brand| %>
      <option value="<%= brand.id()%>"> <%= brand.name() %> </option>
    <% end %>
  </select>

  <button type="submit">Add brand</button>
</form>
